<?xml version="1.0" encoding="UTF-8"?>
<web-app>
	<description>
		ESOE Core
	</description>

	<!-- Explicitly set Xerces and Xalan implementations to avoid performance bottlenecks in ESOE -->
	<system-property
		javax.xml.parsers.DocumentBuilderFactory="org.apache.xerces.jaxp.DocumentBuilderFactoryImpl" />
	<system-property
		javax.xml.parsers.SAXParserFactory="org.apache.xerces.jaxp.SAXParserFactoryImpl" />
	<system-property
		javax.xml.transform.TransformerFactory="org.apache.xalan.processor.TransformerFactoryImpl" />
	<system-property
		javax.xml.validation.SchemaFactory="org.apache.xerces.jaxp.validation.XMLSchemaFactory" />

	<!-- Instantiate spring loader listener for servlet 2.4 compliant containers -->
	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>

	<!-- Specify the context configuration path -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/esoeContext.xml</param-value>
	</context-param>

	<!-- Servlets defined for the ESOE -->
	<servlet>
		<servlet-name>esoeAuthentication</servlet-name>
		<servlet-class>
			com.qut.middleware.esoe.authn.servlet.AuthnServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>esoeSSO</servlet-name>
		<servlet-class>
			com.qut.middleware.esoe.sso.servlet.SSOAAServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>esoeSSOLogout</servlet-name>
		<servlet-class>
			com.qut.middleware.esoe.sso.servlet.SSOLogoutServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>esoeWS</servlet-name>
		<servlet-class>
			org.apache.axis2.transport.http.AxisServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<!-- Servlet Mappings -->
	<servlet-mapping>
		<servlet-name>esoeAuthentication</servlet-name>
		<url-pattern>/signin</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>esoeSSOLogout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>esoeSSO</servlet-name>
		<url-pattern>/sso</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>esoeWS</servlet-name>
		<url-pattern>/ws/*</url-pattern>
	</servlet-mapping>

	<error-page>
		<error-code>500</error-code>
		<location>/web/failure.htm</location>
	</error-page>
</web-app>
